{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/auth/:action",
            "destination": "/api/auth.js"
        },
        {
            "source": "/api/companies/:action",
            "destination": "/api/companies.js"
        },
        {
            "source": "/api/requests/:action",
            "destination": "/api/requests.js"
        },
        {
            "source": "/api/clock/:action",
            "destination": "/api/clock.js"
        },
        {
            "source": "/api/staff/:action",
            "destination": "/api/staff.js"
        },
        {
            "source": "/api/salary/:action",
            "destination": "/api/salary.js"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Credentials",
                    "value": "true"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET,POST,PUT,DELETE,OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization"
                }
            ]
        }
    ]
}